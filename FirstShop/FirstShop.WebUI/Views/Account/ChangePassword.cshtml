@model UserPasswordViewModel

<h3>Change Password</h3>
<form asp-controller="Account" asp-action="ChangePassword">
    <input asp-for="Id" type="hidden" />
    <label asp-for="CurrentPassword"></label>
    <input type="password" asp-for="CurrentPassword" class="form-control" />
    <label asp-for="Password"></label>
    <input  type="password" asp-for=Password class="form-control" />
    <label  asp-for="PasswordConfirm"></label>
    <input type="password" asp-for="PasswordConfirm" class="form-control" />
    <button class="btn btn-secondary" type="submit">Change</button>
</form>