@model List<ListOrderViewModel>

<table class="table table-striped">
    <tr>
       
        <th>UserName</th>
        <th>OrderDate</th>
        <th>Statu</th>
        <th></th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td>@item.CreatedDate</td>
            <td> @item.OrderStatus</td>
            @if (item.OrderStatus == FirstShop.Data.Enums.OrderStatusEnum.Hazırlanıyor)
            {
                <td><a asp-area="Admin" asp-controller="Order" asp-action="Statu" asp-route-id="@item.Id" class="btn btn-success">Onayla</a></td>
            }
            else
            {
                <td></td>

            }



        </tr>
    }


</table>